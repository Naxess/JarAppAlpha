<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/cat_in_sharkhat"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.com220.sli.jarappalpha.CreateNewMemory"
    tools:showIn="@layout/activity_create_new_memory">

    <TextView
        android:id="@+id/date_edittext"
        android:hint="Current Date"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/date_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload photo(s)"
        android:id="@+id/upload_photo_button"
        android:layout_above="@+id/upload_video_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload video(s)"
        android:id="@+id/upload_video_button"
        android:layout_above="@+id/submit_to_jar_button"
        android:layout_alignLeft="@+id/upload_photo_button"
        android:layout_alignStart="@+id/upload_photo_button"
        android:layout_alignRight="@+id/upload_photo_button"
        android:layout_alignEnd="@+id/upload_photo_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Details"
        android:id="@+id/submit_to_jar_button"
        android:layout_above="@+id/create_new_memory_back_button"
        android:layout_alignLeft="@+id/upload_video_button"
        android:layout_alignStart="@+id/upload_video_button"
        android:layout_alignRight="@+id/upload_video_button"
        android:layout_alignEnd="@+id/upload_video_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/create_new_memory_back_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/submit_to_jar_button"
        android:layout_alignEnd="@+id/submit_to_jar_button"
        android:layout_alignLeft="@+id/submit_to_jar_button"
        android:layout_alignStart="@+id/submit_to_jar_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/editText"
        android:hint="Type description here."
        android:background="#C8C8C8"
        android:alpha="0.50"
        android:gravity="top"
        android:padding="5dip"
        android:layout_above="@+id/upload_photo_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/date_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:id="@+id/date_button"
        android:layout_alignTop="@+id/date_edittext"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

</RelativeLayout>
